
@{
    ViewData["Title"] = " الخدمات";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-xl-8">
        <div class="card m-b-20">
            <div class="card-header">
                <h3 class="card-title">أنشاء خدمة جديدة </h3>
                <div style="display: none; text-align: center;" class="alert alert-danger" id="errorMessage" role="alert">

                </div>
                <div style="display: none; text-align: center;" class="alert alert-success" id="successMessage" role="alert">

                </div>
            </div>
            <div class="card-body mb-0">
                <form id="createServiceForm" class="form-horizontal" asp-action="Create" enctype="multipart/form-data" runat="server">
                    <div asp-validation-summary="All" style="margin-bottom: 2rem; text-align: center;" class="text-danger"></div>

                    <div class="form-group">
                        <label for="MainSectionId" class="control-label">القسم الرئيسي</label>
                        <select id="MainSectionId" name="MainSectionId" class="form-control required-field" asp-items="ViewBag.MainSectionId">
                            <option value="">اختر القسم الرئيسي</option>
                        </select>
                        <span class="text-danger" id="MainSectionIdValidation"></span>

                    </div>

                    <div class="form-group">
                        <label for="TitleAr" class="control-label">العنوان بالعربية</label>
                        <input id="TitleAr" name="TitleAr" class="form-control required-field required-field" />
                        <span class="text-danger" id="TitleArValidation"></span>
                    </div>

                    <div class="form-group">
                        <label for="TitleEn" class="control-label">العنوان بالإنجليزية</label>
                        <input id="TitleEn" name="TitleEn" class="form-control required-field" />
                        <span class="text-danger" id="TitleEnValidation"></span>
                    </div>

                    <div class="form-group">
                        <label for="Description" class="control-label">الوصف</label>
                        <textarea rows="5" name="Description" id="Description" class="form-control required-field"></textarea>
                        <span class="text-danger" id="DescriptionValidation"></span>
                    </div>

                    <div class="form-group">
                        <label for="thePrice" class="control-label">السعر</label>
                        <input name="Price" id="Price" class="form-control required-field" />
                        <span class="text-danger" id="PriceValidation"></span>
                    </div>

                    <div class="form-group">
                        <label for="theQty" class="control-label">الكمية</label>
                        <input name="Qty" id="Qty" class="form-control required-field" />
                        <span class="text-danger" id="QtyValidation"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">نوع المنتج</label><br />
                        <input class="required-field" type="radio" name="ProductType" id="ProductType" value="Stored" />
                        <label for="StoredProduct">مخزن</label>

                        <input class="required-field" type="radio" name="ProductType" id="ProductType" value="Service" />
                        <label for="ServiceProduct">خدمة</label>

                        <span class="text-danger" id="ProductTypeValidation"></span>
                    </div>

                    <div class="form-group mb-0 row justify-content-end">
                        <div class="col-md-9 float-end">
                            <button type="submit" class="btn btn-primary waves-effect waves-light">أنشاء</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<div style="margin-bottom: 4rem; text-align: end;">
    <a asp-action="Index"class="btn btn-secondary">العودة للقائمة</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            var getMainSectionsUrl = "@Url.Action("GetMainSections", "MainSections")";
            var createServiceUrl = "@Url.Action("Create", "Services")";
        </script>
        <script src="~/js/servicescreate.js"></script> <!-- Load JavaScript file -->


      
    }
    <script>
                tinymce.init({
                    selector: "textarea",
                     branding: false,
                    promotion: false,
                     statusbar: false
                });
    </script>
}