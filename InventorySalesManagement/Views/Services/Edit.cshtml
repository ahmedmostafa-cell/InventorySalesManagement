@model int

@{
    ViewData["Title"] = "تعديل البيانات";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">						
    <div class="col-xl-8">
        <div class="card m-b-20">
            <div class="card-header">
                <h3 class="card-title">تعديل البيانات </h3>
                <div style="display: none; text-align: center;" class="alert alert-danger" id="errorMessage" role="alert">

                </div>
                <div style="display: none; text-align: center;" class="alert alert-success" id="successMessage" role="alert">

                </div>
            </div>
            <div class="card-body mb-0">
                <form id="editForm" class="form-horizontal" enctype="multipart/form-data">
                    <div id="validationSummary" class="text-danger text-center mb-3"></div>

                    <!-- Hidden Inputs -->
                    <input type="hidden" id="Id" name="Id" />
                    <input type="hidden" id="CreatedAt" name="CreatedAt" />
                    <input type="hidden" id="IsDeleted" name="IsDeleted" />
                    <input type="hidden" id="UpdatedAt" name="UpdatedAt" />
                    <input type="hidden" id="IsUpdated" name="IsUpdated" />

                    <!-- Main Section Selection -->
                    <div class="form-group">
                        <label for="MainSectionId" class="control-label">القسم الرئيسي</label>
                        <select id="MainSectionId" name="MainSectionId" class="form-control required-field">
                            <option value="">اختر القسم الرئيسي</option>
                        </select>
                        <span class="text-danger" id="MainSectionIdValidation"></span>
                    </div>

                    <!-- Arabic Title -->
                    <div class="form-group">
                        <label for="TitleAr" class="control-label">العنوان بالعربية</label>
                        <input id="TitleAr" name="TitleAr" class="form-control required-field" />
                        <span class="text-danger" id="TitleArValidation"></span>
                    </div>

                    <!-- English Title -->
                    <div class="form-group">
                        <label for="TitleEn" class="control-label">العنوان بالإنجليزية</label>
                        <input id="TitleEn" name="TitleEn" class="form-control required-field" />
                        <span class="text-danger" id="TitleEnValidation"></span>
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label for="Description" class="control-label">الوصف</label>
                        <textarea rows="5" id="Description" name="Description" class="form-control required-field"></textarea>
                        <span class="text-danger" id="DescriptionValidation"></span>
                    </div>

                    <!-- Price -->
                    <div class="form-group">
                        <label for="Price" class="control-label">السعر</label>
                        <input id="Price" name="Price" type="number" class="form-control required-field" onchange="changeFinalPrice()" />
                        <span class="text-danger" id="PriceValidation"></span>
                    </div>

                    <!-- Quantity -->
                    <div class="form-group">
                        <label for="Qty" class="control-label">الكمية</label>
                        <input id="Qty" name="Qty" type="number" class="form-control required-field" />
                        <span class="text-danger" id="QtyValidation"></span>
                    </div>

                    <!-- Product Type -->
                    <div class="form-group">
                        <label class="control-label">نوع المنتج</label><br />
                        <input type="radio" id="StoredProduct" name="ProductType" value="Stored" />
                        <label for="StoredProduct">مخزن</label>

                        <input type="radio" id="ServiceProduct" name="ProductType" value="Service" />
                        <label for="ServiceProduct">خدمة</label>

                        <span class="text-danger" id="ProductTypeValidation"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group mb-0 row justify-content-end">
                        <div class="col-md-9 float-end">
                            <button type="submit" class="btn btn-primary waves-effect waves-light">تعديل</button>
                        </div>
                    </div>
                </form>



            </div>
        </div>
    </div>
</div>


		
 <div style="margin-bottom: 4rem;text-align: end;">
    <a asp-action="Index"class="btn btn-secondary">العودة للقائمة</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            var serviceId = @Model;
        </script>
        <script src="~/js/serviceseditgetservice.js"></script>
        <script src="~/js/servicesedit.js"></script>

    }
        <script>
                    tinymce.init({
                        selector: "textarea",
                         branding: false,
                        promotion: false,
                         statusbar: false
                    });
        </script>
    
}
