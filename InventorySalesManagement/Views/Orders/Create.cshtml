                        $("#inCenter").hide();
                        $("#inHome").hide();
                        $("#divEmployeesNumber").hide();
                        document.getElementById('inCenterInput').checked = false;
                        document.getElementById('inHomeInput').checked = false;
                        $("#inputEmployeesNumber").val('0');

                    }

