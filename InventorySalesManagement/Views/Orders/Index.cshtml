@model IEnumerable<Order>

@{
    ViewData["Title"] = "قائمة بكل الحجوزات ";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    var error = TempData["Error"] ;  
    var success = TempData["Success"] ;
}
<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title" >كل الحجوزات   </h3>
                @if (error != null)
                {
                    <div style="text-align: center;" class="alert alert-danger" role="alert">
                        @error
                    </div>
                }
                @if (success != null)
                {
                    <div style="text-align: center;" class="alert alert-success" role="alert">
                        @success
                    </div>
                }
            </div>
            <div class="table-responsive" style="padding: 1.5rem; overflow-x: inherit;">
                <table class="table mb-0 table-borderless" id="table_id">
                    <thead>
                    <tr>
                        <th> رقم الطلب </th>
                        <th>اسم الخدمة</th>
                        <th>اسم مقدم الخدمة </th>
                        <th>نوع مقدم الخدمة </th>
                        <th>اسم العميل </th>
                        <th>حالة الطلب</th>
                        <th>حالة السداد</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                    @item.Service.TitleAr
                            </td>
                           
                           
                           
                           
                           
                          
                            
                           
                     
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
         $(document).ready( function () {
                $('#table_id').DataTable( {
                     paging: true,
                     ordering:  true,
                     "pagingType": "simple_numbers",
                     "lengthMenu": [ 10, 20, 75, 100 ] ,
                     "oLanguage": {
                                   "sSearch": "البحث"
                                  }
                } );
        } );
 

    </script>
}

