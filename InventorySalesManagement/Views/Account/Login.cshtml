@model LoginModel

@{
	ViewData["Title"] = "Login";
}

<div class="page page-h custom-page">
	<div class="page-content z-documentation-10">
		<div class="container">
			<div class="row">
				<div class="col-xl-4 col-md-12 col-md-12 d-block mx-auto">
					<div class="card mb-0">
						<div class="card-header">
							<h3 class="card-title">Login to your Account</h3>
						</div>
						<div class="card-body">

							<form asp-controller="Account" asp-action="Login" method="post">

								<div asp-validation-summary="ModelOnly" class="text-danger" style="text-align: center;"></div>
								<div class="form-group">
									<label asp-for="PhoneNumber" class="form-label text-dark"></label>
									<input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" required="" />
									<span asp-validation-for="PhoneNumber" class="text-danger"></span>
								</div>

								<div class="form-group">
									<label asp-for="Password" class="form-label text-dark"></label>
									<input asp-for="Password" class="form-control" placeholder="Password" required="" type="password" />
									<span asp-validation-for="Password" class="text-danger"></span>
								</div>

								<div class="form-group">
									<label class="custom-control custom-checkbox">
										@*<a asp-action="ForgotPassword" class="float-end small text-dark mt-1">I forgot password</a>*@
										<input asp-for="IsPersist" class="custom-control-input">
										<span class="custom-control-label text-dark">Remember me</span>
									</label>
								</div>

								<div class="form-footer mt-2">
									<input type="submit" value="SignIn" class="btn btn-primary btn-block">
								</div>
							</form>
							@*  <div class="text-center text-dark mt-3 ">
							<a asp-action="ForgotPassword" asp-controller="Account">Forgot Password</a>
							</div>*@


						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>






@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
