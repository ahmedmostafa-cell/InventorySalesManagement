@model MainSection

@{
    ViewData["Title"] = "التفاصيل";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="row">						
    <div class="col-xl-8">
        <div class="card m-b-20">
            <div class="card-header">
                <h3 class="card-title">التفاصيل  </h3>
            </div>
            <div class="card-body mb-0">
                    
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.TitleAr)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.TitleAr)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.TitleEn)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.TitleEn)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.Raw(Model.Description)
                    </dd>
        
                 
        
                   
                </dl>
            </div>
        </div>
    </div>
</div>

 <div style="margin-bottom: 4rem;text-align: end;">
    <a asp-action="Edit" asp-route-id="@Model.Id"class="btn btn-warning">تعديل</a> 
    <a asp-action="Index"class="btn btn-secondary">العودة للقائمة</a>
</div>
